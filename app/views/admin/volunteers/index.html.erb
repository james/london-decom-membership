<h2><%= t('.title', position: @volunteer_role.name) %></h2>

<p><%= t('.info') %></p>

<h3><%= t('.current_leads') %></h3>

<ul>
  <% @leads.each do |lead| %>
    <li>
      <%= lead.user.name %> (<%= lead.user.email %>)
      <%= link_to t('.remove'), admin_event_volunteer_role_volunteer_path(@event, lead.volunteer_role, lead), method: :delete, data: {confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>

<h3><%= t('.add') %></h3>

<%= bootstrap_form_for [:admin, @event, @volunteer_role, Volunteer.new] do |form| %>
  <%= form.select :user_id,
                  User.pluck(:id, :name, :email).collect {|u| ["#{u[1]} (#{u[2]})", u[0]]},
                  {label: t('.find_a_member')},
                  {class: 'selectpicker', data: { 'live-search': 'true' }}
  %>
  <%= form.submit t('.make_lead') %>
<% end %>
