<h2>Members</h2>

<p>There is currently <%= pluralize(@users.count, 'member') %></p>

<%= form_tag nil, method: :get do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'Search' %>
<% end %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Early Access</th>
    <th>Created</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? %></td>
      <td><%= user.early_access? %></td>
      <td><%= user.created_at.to_s(:long) %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    </tr>
  <% end %>
</table>

<%= paginate @users, theme: 'twitter-bootstrap-4' %>

<%= link_to 'Unconfirmed accounts', unconfirmed_admin_users_path %>
