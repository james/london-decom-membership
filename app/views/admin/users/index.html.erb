<h2><%= t('.title') %></h2>

<p><%= t('.member_count', count: User.confirmed.count) %></p>

<%= form_tag nil, method: :get do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag t('.search') %>
<% end %>

<table class="table">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.email') %></th>
    <th><%= t('.admin') %></th>
    <th><%= t('.early_access') %></th>
    <th><%= t('.created') %></th>
    <th><%= t('.actions') %></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin? %></td>
      <td><%= user.early_access? %></td>
      <td><%= user.created_at.to_s(:short) %></td>
      <td><%= link_to t('.edit'), edit_admin_user_path(user) %></td>
    </tr>
  <% end %>
</table>

<%= paginate @users, theme: 'twitter-bootstrap-4' %>

<%= link_to t('.unconfirmed_acounts'), unconfirmed_admin_users_path %>
